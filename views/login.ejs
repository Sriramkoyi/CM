<link rel="stylesheet" href="/css/style.css">
<div class="login">
    <!--login heading-->
    <div>
    <h1></h1>
    <img src="gated community.jpg" alt="">
    </div>
    <div>
    <h1 class="loginlabel">Login on community</h1>
       <div class="form">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3" id="Username">
                <label for="username" class="form-label">Username</label>
            <input name="username" id="username" placeholder="Type a username" type="text" class="form-control" required >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">username is neccessary</div>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
            <input name="password" id="password" placeholder="Enter password" type="password" class="form-control" required >
            
            <div class="invalid-feedback">password is not valid </div>
            </div>
            <p>Doesn't have a account <a href='/signup'>Sign up</a></p>
            <button class="loginbutton">Login</button>
        </form>
        </div>
    </div>
</div>